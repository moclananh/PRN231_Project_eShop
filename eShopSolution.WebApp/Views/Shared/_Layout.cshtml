<body>
    <input type="hidden" id="hidCulture" value="@culture" />
    <input type="hidden" id="hidBaseAddress" value="@Configuration["BaseAddress"]" />
    <div id="header">
        <div class="container">
            <div id="welcomeLine" class="row" style="flex-wrap: nowrap !important">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Details" asp-controller="User" class="span6">Welcome!<strong> @User.Identity.Name</strong></a>
                    <a asp-action="GetBillHistory" asp-controller="Order" class="btn btn-primary">Bill History</a>
                }
                else
                {
                    <div class="span6">Welcome!<strong> Guest!</strong></div>
                    <form method="get" action="/@culture/Order/SearchBillById">
                        <input type="text" name="id" placeholder="Enter ID" />
                        <button type="submit">Search</button>
                    </form>
                }
                <div class="span6">
                    <div class="pull-right">
                        <language-nav language-label="NativeName"
                                      cookie-handler-url="@(Url.Action("SetCultureCookie", "Home", new { area= "", cltr="{0}", returnUrl="{1}" }))">
                        </language-nav>

                        <a href="/@culture/cart">
                            <span class="btn btn-mini btn-primary">
                                <i class="icon-shopping-cart icon-white"></i> [ <span id="lbl_number_items_header">0</span> ] Itemes in your cart
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar" style="display:block !important; padding:0 !important">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner" style="background-color:lightpink; background-image:linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(121,9,112,0.3) 35%, rgba(0,212,255,1) 100%); display: flex; align-items:center">
                    <a class="brand" href="/"><img src="/themes/images/logo.png" alt="Bootsshop" style="width:100px" /></a>
                    <form class="form-inline navbar-search" method="post" asp-controller="Home" asp-action="Index">
                        <input id="srchFld" name="keyword" class="srchTxt" type="text" style="height: 30px; border-radius: 16px; margin-right: 8px" />
                        <select name="categoryId" class="srchTxt" style="border-radius: 16px; padding: 3px; margin-right: 8px" asp-items="@ViewBag.Categories">
                            <option>All</option>
                            @* <option>Love Flower</option>
                            <option>Congratulation Flower</option>
                            <option>Condolence Flower</option>
                            <option>Birthday Flower</option>*@
                        </select>
                        <button type="submit" id="submitButton" class="btn btn-primary">Go</button>
                    </form>
                    <ul id="topMenu" class="nav pull-right">
                        <li class=""><a asp-route-culture="@culture" localize-content>Specials Offer</a></li>
                        <li class=""><a asp-route-culture="@culture" localize-content>Delivery</a></li>
                        <li class=""><a asp-route-culture="@culture" localize-content>Contact</a></li>
                        <li class="">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form action="/@culture/Account/Logout" method="post">
                                    <button type="submit" style="padding-right:0;margin-top:10px;margin-bottom:0px;background:transparent;border:none;">
                                        <span class="btn btn-large btn-success"><localize>Logout</localize></span>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a href="/@culture/Account/Login" style="padding-right:0">
                                    <span class="btn btn-large btn-success"><localize>Login</localize></span>
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End====================================================================== -->
    @RenderSection("slider", required: false)
    <div id="mainBody">
        <div class="container">
            <div class="row" style="flex-wrap: nowrap; margin-right: 0px; margin-left: -30px">
                <!-- Sidebar ================================================== -->
                @await Component.InvokeAsync("SideBar")
                <!-- Sidebar end=============================================== -->
                <div class="">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <!-- Footer ================================================================== -->
    <div class="container my-5">

        <footer class="text-center text-lg-start" style="background-color: lightpink;">
            <div class="container d-flex justify-content-center py-5">
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: #54456b;">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: #54456b;">
                    <i class="fab fa-youtube"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: #54456b;">
                    <i class="fab fa-instagram"></i>
                </button>
                <button type="button" class="btn btn-primary btn-lg btn-floating mx-2" style="background-color: #54456b;">
