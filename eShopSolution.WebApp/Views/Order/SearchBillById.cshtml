@{
    ViewData["Title"] = "SearchBillById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using eShopSolution.ViewModels.Catalog.Orders;
@model BillHistoryDetailVM

<!DOCTYPE html>
<html>
<head>
    <title>Check Bill</title>
    <style>
        .container-error {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

            .container-error h1 {
            color: #ff4444;
        }

            .container-error p {
            font-size: 18px;
        }
    </style>
</head>
<body>

    
    @if (Model.price != null)
    {
        <h1 style="text-align: center; font-weight: 700">Check Bill</h1>
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Status</th>
                    <!-- Add more table headers as needed -->
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ID</td>
                    <td>
                        @foreach (var productName in Model.name)
                        {
                            <div style="margin-bottom: 16px">@productName</div>
                        }
                    </td>
                    <td>
                        @foreach (var quantity in Model.quantity)
                        {
                            <div style="margin-bottom: 16px">@quantity</div>
                        }
                    </td>
                    <td>
                        @foreach (var productPrice in Model.price)
                        {
                            <div style="margin-bottom: 16px">@productPrice</div>
                        }
                    </td>
                    <td>@Model.status</td>
                    <!-- Add more table cells for other properties -->
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <div class="container-error">
            <h1>Invoice not found</h1>
            <p>No invoices found for this ID.</p>
        </div>
    }


</body>
</html>
